{
  "name": "@epiphany/crypto",
  "version": "0.0.1",
  "description": "BIP39 + topic derivation + Ed25519 signing (Thought Market signature v1)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^1.8.0",
    "@scure/bip39": "^2.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "jest": "^30.0.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.0",
    "typescript": "^5.7.3"
  }
}
