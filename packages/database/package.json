{
  "name": "@epiphany/database",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "prisma"
  ],
  "scripts": {
    "build": "pnpm db:generate && tsc -p tsconfig.build.json",
    "db:generate": "node scripts/prisma-generate.mjs",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:validate": "prisma validate",
    "prisma": "prisma",
    "test": "node --test"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/pg": "^8.10.9",
    "prisma": "^6.6.0",
    "typescript": "^5.7.3"
  }
}
